# ===================
# Local Development
# ===================

# Database (use DATABASE_URL or individual vars)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/kanba

# Or individual database vars:
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=kanba
# DB_USER=postgres
# DB_PASSWORD=postgres

# Backend
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

